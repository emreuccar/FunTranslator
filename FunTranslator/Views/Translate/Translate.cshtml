@using FunTranslator.Data.Models;
@model TranslateViewModel
@{
    ViewData["Title"] = "Translate Page";
}

<div class="row">
    <div class="col-md-9">
        <form asp-action="TranslateText">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="text" class="control-label">Text To Translate</label>
                <textarea asp-for="text" class="form-control"></textarea>
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Translate" class="btn btn-primary" />
            </div>
            <b>@ViewBag.data.message</b>         
        </form>
    </div>    
</div>