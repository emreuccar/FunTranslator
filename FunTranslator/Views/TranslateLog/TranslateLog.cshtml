@using FunTranslator.Data.Models;
@model TranslateSearchModel
@{
    ViewData["Title"] = "Translate Log Page";
}

<div class="row">
    <form asp-action="Search">
        <div class="form-group">
            request text: @Html.TextBoxFor(x => x.Text, new { @class = "form-control"})
           <br />
            request start date:  <br />
            @Html.TextBoxFor(x => x.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date"}) 
            request start date <br />
            @Html.TextBoxFor(x => x.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date"})
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
        <div class="col-md-9">
            <table id="assets-data-table" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>RequestData</th>
                        <th>ResponseData</th>
                        <th>ReturnCode</th>
                        <th>ReturnMessage</th>
                        <th>TranslationType</th>
                        <th>LogDate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (TranslateLog log in ViewBag.data.Logs)
                    {
                        <tr>
                            <td>@log.Id</td>
                            <td>@log.RequestData</td>
                            <td>@log.ResponseData</td>
                            <td>@log.ReturnCode</td>
                            <td>@log.ReturnMessage</td>
                            <td>@log.TranslationType</td>
                            <td>@log.LogDate</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </form>
</div>